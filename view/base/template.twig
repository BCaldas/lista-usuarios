{% extends "base/base.twig" %}
{% block body %}
<body class="hold-transition skin-blue-light sidebar-mini">
{% block head %}
        <header class="main-header">

            <div class="logo">

                <span class="logo-mini"><b>E</b>SU</span>

                <span class="logo-lg"><b>Emiolo</b> Usuários</span>
            </div>

            <nav class="navbar navbar-static-top">

                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">

                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="public_html/images/avatar_generico.jpg" class="user-image">
                                <span class="hidden-xs">{{ nomeUsuario }}</span>
                            </a>
                            <ul class="dropdown-menu">

                                <li class="user-header">
                                    <img src="public_html/images/avatar_generico.jpg" class="img-circle">

                                    <p>
                                        {{ nomeUsuario }} - {{ cargoUsuario }}
                                        <small>Membro desde {{ dataCriacaoUsuario }}</small>
                                    </p>
                                </li>

                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Perfil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="{{ path_for('logout') }}" class="btn btn-default btn-flat">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
{% endblock %}
{% block menu %}
    <aside class="main-sidebar">
        <section class="sidebar">

            <div class="user-panel">
                <div class="pull-left image">
                    <img src="public_html/images/avatar_generico.jpg" class="img-circle">
                </div>
                <div class="pull-left info">
                    <p>{{ nomeUsuario }}</p>
                    <span><i class="fa fa-circle text-success"></i> Online</span>
                </div>
            </div>

            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">MENU PRINCIPAL</li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-users"></i> <span>Usuários</span>
                        <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="#"><i class="fa fa-circle-o"></i> Usuário Logado</a></li>
                        <li><a href="{{ path_for('listaUsuarios') }}"><i class="fa fa-circle-o"></i> Usuários Cadastrados</a></li>
                        <li><a href="#"><i class="fa fa-circle-o"></i> Novo Usuário</a></li>
                    </ul>
                </li>
            </ul>
        </section>

    </aside>
{% endblock %}
{% block content %}
       {% endblock %}
</body>
{% endblock %}
