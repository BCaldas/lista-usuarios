{% extends "base/template.twig" %}

{% block title %}Usuário Logado{% endblock %}

{% block content%}
    <div class="content-wrapper" style="min-height: 946px;">
    <section class="content-header">
        <h1>
            Usuários
            <small>Usuário Logado</small>
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i> Home</li>
            <li> Usuário </li>
            <li class="active">Usuário Logado</li>
        </ol>
    </section>

    <section class="content">

        <div class="box box-primary">

            <form role="form">
                <div class="box-body">

                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" name="nome" value="{{ usuario.getNome }}" disabled>
                    </div>
                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" name="email" class="form-control" value="{{ usuario.getEmail }}" disabled>
                    </div>

                    <div class="form-group">
                        <label>Cargo</label>
                        <input class="form-control" name="cargo" value="{{ usuario.getCargo }}" disabled>
                    </div>

                    <div class="form-group">
                        <label>Login</label>

                        <input class="form-control" name="login" value="{{ usuario.getLogin }}" disabled>
                    </div>

                    <div class="form-group">
                        <label>Data Criação</label>

                        <input type="text" class="form-control" name="data" value="{{ usuario.getDataCriacao|date("d/m/Y H:i:s") }}" disabled>
                    </div>

                </div>

            </form>

        </div>

    </section>
    </div>
{% endblock %}