{% extends "base/home.twig" %}

{% block body %}
    <body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>Emiolo</b> Sistema de Usuários
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">Entre com seu login para iniciar a sessão</p>

            <form method="post">
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Login">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Senha">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">

                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
                    </div>

                </div>
            </form>

            <a href="register.html" class="text-center">Sou um novo usuário</a>

        </div>

    </div>

    </body>
{% endblock %}