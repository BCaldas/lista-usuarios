{% extends "base/base.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>Emiolo</b> Sistema de Usuários
        </div>

        <div class="login-box-body">

            <p class="login-box-msg">Entre com seu login para iniciar a sessão</p>
            {% include "base/flash-erro.twig" %}
            {% include "base/flash-sucesso.twig" %}
            <form method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="login" placeholder="Login">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="senha" placeholder="Senha">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">

                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
                    </div>

                </div>
            </form>

            <a href="{{ path_for('novoUsuario') }}" class="text-center">Sou um novo usuário</a>

        </div>

    </div>

    </body>
{% endblock %}